@page
@model LibraryApp1.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to LWG Library World!</h1>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@* <h2>Library Statistics</h2>
<ul>
    <li>Total Books: @Model.TotalBooks</li>
    <li>Books Checked Out: @Model.CheckedOutBooks</li>
</ul> *@

<form method="get">
    <div class="form-group">
        <label for="search">Search for Books:</label>
        <input type="text" name="search" id="search" class="form-control" value="@Model.SearchTerm" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Books != null && Model.Books.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>
                        <a href="/details/@book.Id" class="btn btn-info">Details</a>
                        
                         @if (!book.IsCheckedOut)
                            {
                            @* <form method="post" asp-page-handler="Checkout" class="d-inline">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <input type="number" name="userId" class="form-control" placeholder="User ID" required />
                                <button type="submit" class="btn btn-primary">Checkout</button>
                            </form> *@
                                <a href="/checkout/@book.Id" class="btn btn-primary">Checkout</a>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Checked Out</span>
                            }
                            
                    </td>
                </tr>
            }
        </tbody>
  
    </table>
} 
else
{
    <p>No books found.</p>
} 


